---
interface Props {
	links: {name: string, url: string}[];
}

const { links } = Astro.props;  
---

<ul class="social">
	{
		links.map((links) => (
			[<li><a href={links.url}><span>{links.name}</span></a></li>, `\n`]
		))
	}
</ul>

<style>
	/*social links*/

	.social {
		position: relative;
		padding: 0;
	}

	.social li {
		display: inline-block;
		position: relative;
		box-sizing: border-box;
		width: auto;
		height: 36px;
		overflow: hidden;
		border: solid 1px var(--tdc);
		border-radius: 36px;
		background: var(--tbc);
		font-size: 18px;
	}

	.social li a {
		display: block;
		position: relative;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		color: var(--tfc);
	}

	.social span {
		display: block;
		position: relative;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		padding: 0 12px;
		line-height: 1;
	}

	.social li {
		transition: color .2s, background .2s;
	}

	.social li:hover {
		border: solid 1px var(--tac);
	}

	.social li a:hover {
		color: #fff;
		background: var(--tac);
	}
</style>